{
  "compilerOptions": {
    "outDir": "../dist-gui",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "main/**/*",
    "preload/**/*",
    "shared/**/*",
    "../src/**/*"
  ],
  "exclude": [
    "node_modules",
    "renderer"
  ]
}
